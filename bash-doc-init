#!/usr/bin/env bash

if [ -n "${__bash_doc_included__}" ]; then return 0; fi
export __bash_doc_included__=true

if [ -z "${BASH_DOC_DIR}" ]; then
    export BASH_DOC_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
fi

# ===================== > Source and export functions < ====================== #
cd ${BASH_DOC_DIR}/functions
source ./init_functions.sh
source ./format_functions.sh
source ./aux.sh
source ./need_help.sh
source ./parse_arguments.sh
source ./show_functions.sh
cd ${BASH_DOC_DIR}/
# ────────────────────────────────── <end> ─────────────────────────────────── #
# ========================= > Export all functions < ========================= #
eval "$(declare -F | sed -e 's/-f /-fx /')"
# ────────────────────────────────── <end> ─────────────────────────────────── #
